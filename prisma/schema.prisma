generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id        String   @id @default(cuid())
  name      String  
  mileage   Int
  reciepts  Reciept[]
}

model Reciept {
  id        String   @id @default(cuid())
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId String
  date      DateTime
  amount    Decimal
  price     Decimal
}